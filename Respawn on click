// Respawn using right mouse clicker

using UnityEngine;
using UnityEngine.SceneManagement;

public class ReloadOnClick : MonoBehaviour
{

    // Use this for initialization
    void Start()
    {

    }

    // Update is called once per frame
    void Update()
    {
        if (Input.GetKeyDown(KeyCode.Mouse1)) // left click
        {
            SceneManager.LoadScene("Endless_Spinning");
        }
    }


}
